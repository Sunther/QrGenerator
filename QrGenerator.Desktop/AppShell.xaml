<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QrGenerator.Desktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QrGenerator.Desktop.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="QrGenerator">

    <TabBar>
        <ShellContent
            Title="Simple QR"
            ContentTemplate="{DataTemplate local:SimpleQrPage}"
            Route="MainPage" />

        <ShellContent
            Title="WiFi QR"
            ContentTemplate="{DataTemplate local:WiFiQrPage}" />
    </TabBar>

</Shell>
