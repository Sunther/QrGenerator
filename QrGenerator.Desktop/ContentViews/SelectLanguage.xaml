<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QrGenerator.Desktop.ContentViews.SelectLanguage">

    <VerticalStackLayout>
        <ImageButton
            HeightRequest="50"
            WidthRequest="50"
            x:Name="AmericanImageButton"
            Source="american_flag.png"
            Clicked="ChangeToSpanish"
            IsVisible="False"
            BackgroundColor="Transparent"
            />
        <ImageButton
            HeightRequest="50"
            WidthRequest="50"
            x:Name="SpanishImageButton"
            Source="spain_flag.png"
            Clicked="ChangeToEnglish"
            IsVisible="False"
            BackgroundColor="Transparent"
            />
    </VerticalStackLayout>

</ContentView>
